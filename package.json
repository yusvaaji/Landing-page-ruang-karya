{
  "name": "landing-page-ruang-karya",
  "version": "0.1.0",
  "description": "Base scaffold for Ruang Karya landing page",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o ./src/css/style.css --minify",
    "build": "npm run build:css",
    "start": "npm run build:css && live-server --open=./index.html",
    "start:server": "npm run build:css && node server/index.js",
    "hash:password": "node scripts/hash-password.js"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.2",
    "helmet": "^7.2.0"
  }
}
